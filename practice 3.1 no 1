// Compute the sum and average of two numbers. //

#include <stdio.h>      /* printf, scanf definitions */

int
main(void)

{
    float   one, two,   /* input - numbers to process       */
            sum,        /* output - sum of one and two      */
            average;    /* output - average of one and two  */

        /* Get two numbers.             */
        printf("Masukkan dua bilangan >> ");
        scanf("%f %f", &one, &two);

        /* Compute sum of numbers.      */
            /* Sum of numbers is one + two              */
            sum = one + two;

        /* Compute average of numbers.  */
            /* Average of numbers is sum of numbers / 2 */
            average = sum / 2;

        /* Display sum and average.     */
        printf("Jumlah dua bilangan tersebut adalah %.2f \ndan rata-rata nya adalah %.2f.", sum, average);

    return (0);
}
